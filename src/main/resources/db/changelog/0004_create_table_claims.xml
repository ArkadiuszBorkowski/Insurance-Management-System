<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                                        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.27.xsd"
        objectQuotingStrategy="QUOTE_ONLY_RESERVED_WORDS">

    <changeSet id="0004-1"
               author="Arkadiusz Borkowski">
        <createTable tableName="claims">
            <column autoIncrement="true"
                    name="id"
                    type="BIGINT">
                <constraints nullable="false"
                             primaryKey="true"
                             primaryKeyName="pk_claims"/>
            </column>
            <column name="claim_number"
                    type="VARCHAR(255)"/>
            <column name="description"
                    type="VARCHAR(700)"/>
            <column name="claim_date"
                    type="DATE"/>
            <column name="claim_registration_date"
                    type="DATE"/>
            <column name="claim_status"
                    type="VARCHAR(255)"/>
            <column name="decision"
                    type="VARCHAR(255)"/>
            <column name="payment_amount"
                    type="DOUBLE"/>
            <column name="payment_date"
                    type="DATE"/>
            <column name="policy_id"
                    type="BIGINT"/>
            <column name="claim_verification_status"
                    type="VARCHAR(255)"/>
        </createTable>
    </changeSet>
    <changeSet id="0004-2"
               author="Arkadiusz Borkowski">
        <addForeignKeyConstraint baseColumnNames="policy_id"
                                 baseTableName="claims"
                                 constraintName="FK_CLAIMS_ON_POLICY"
                                 referencedColumnNames="id"
                                 referencedTableName="policy"/>
    </changeSet>

</databaseChangeLog>